{
  "name": "carapi-nodejs-example",
  "version": "1.0.0",
  "description": "NodeJS example client for CarAPI",
  "type": "module",
  "main": "server",
  "scripts": {
    "production": "node server",
    "development": "node --watch server",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --testTimeout=10000 --detectOpenHandles",
    "format": "prettier --write .",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix ",
    "start": "node --env-file=.env server"
  },
  "author": "CarAPI Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.10.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "jest": "^29.7.0",
    "nock": "^13.5.6",
    "node-mocks-http": "^1.16.1",
    "prettier": "^3.4.1",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "jwt-decode": "^4.0.0"
  },
  "engines": {
    "node": "20.x"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "forceExit": true
  }
}